PKG_CPPFLAGS = @PKG_CPPFLAGS@
PKG_CXXFLAGS = @PKG_CXXFLAGS@
CXX_STD = @CXX_STD@
PKG_LIBS = `"$(R_HOME)/bin/Rscript" -e "Rcpp:::LdFlags()"` @PKG_LIBS@
wsrf_FLAGS = $(R_XTRA_CPPFLAGS) $(PKG_CPPFLAGS) $(CPPFLAGS) $(CLINK_CPPFLAGS) $(R_XTRA_CXXFLAGS) $(PKG_CXXFLAGS) $(CXX1XPICFLAGS) $(SHLIB_CXXFLAGS) $(CXX1XFLAGS:-g=) $(CXX1XSTD)

all: $(SHLIB)

%.o: %.cpp
	$(SHLIB_CXX1XLD) $(wsrf_FLAGS) -c $< -o $@

