CXX_STD = "CXX11"
PKG_LIBS = $(shell "${R_HOME}/bin${R_ARCH_BIN}/Rscript.exe" -e "Rcpp:::LdFlags()") -pthread
wsrf_FLAGS = $(R_XTRA_CPPFLAGS) $(PKG_CPPFLAGS) $(CPPFLAGS) $(CLINK_CPPFLAGS) $(R_XTRA_CXXFLAGS) $(PKG_CXXFLAGS) $(CXX1XPICFLAGS) $(SHLIB_CXXFLAGS) $(CXX1XFLAGS) $(CXX1XSTD)

all: $(SHLIB)

%.o: %.cpp
	$(SHLIB_CXX1XLD) $(wsrf_FLAGS) -c $< -o $@

